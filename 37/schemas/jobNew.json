{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/jobNew.schema.json",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 60
        },
        "companyHandle": {
            "type": "string",
            "minLength": 1,
            "maxLength": 20
        },
        "salary": {
            "type": "integer",
            "minimum": 0
        },
        "equity": {
            "type": "string",
            "pattern": "0|(0?\\.[0-9]+)"
        }
    },
    "additionalProperties": false,
    "required": [ "title", "companyHandle" ]
}
